{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES5",
        "module": "commonjs",
        "lib": ["ES6", "DOM"],
        "strict": true,
        "strictNullChecks": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "types"
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended"
}
